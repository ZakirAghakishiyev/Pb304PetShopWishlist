@{
    CartViewModel cartViewModel = Model;
}

<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-primary">Your cart</span>
    <span class="badge bg-primary rounded-circle pt-2">@cartViewModel.Quantity</span>
</h4>
<ul class="list-group mb-3">

    @foreach(var item in cartViewModel.Items)
    {
        <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
                <h6 class="my-0">@item.Name (@item.Quantity)</h6>
                <small class="text-body-secondary">Brief description</small>
            </div>
            <span class="text-body-secondary">$@(item.Price*item.Quantity)</span>
        </li>

    }
   
    <li class="list-group-item d-flex justify-content-between">
        <span class="fw-bold">Total (USD)</span>
        <strong>$@cartViewModel.Total</strong>
    </li>
</ul>
